{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "rootDir": "./",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "declaration": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*.ts",
        ".eslintrc.cjs",
        "esbuild.config.cjs"
    ],
    "exclude": [
        "./node_modules"
    ]
}