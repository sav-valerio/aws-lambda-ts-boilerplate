{
  "name": "lambda-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for AWS Lambda functions written in TypeScript",
  "bin": {
    "lambda-boilerplate-api": "bin/lambda-boilerplate-api.js"
  },
  "scripts": {
    "prepare": "npx husky install",
    "ts-check": "tsc --noEmit",
    "lint": "eslint --fix src/** && prettier --config .prettierrc 'src/**/*.ts' --write && npm run ts-check",
    "migrate-local": "node src/database/migrations/migrate.mjs",
    "test": "vitest run --single-thread",
    "coverage": "vitest run --single-thread --coverage",
    "cdk": "cdk",
    "deploy": "npm run ts-check && cdk deploy --context",
    "watch": "npm run ts-check && cdk watch --no-rollback --context"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WeSchoolEng/lambda-boilerplate.git"
  },
  "author": "Saverio Valerio <saverio.valerio@weschool.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/WeSchoolEng/lambda-boilerplate/issues"
  },
  "homepage": "https://github.com/WeSchoolEng/lambda-boilerplate#readme",
  "dependencies": {
    "@aws-lambda-powertools/commons": "^1.12.1",
    "@aws-lambda-powertools/logger": "^1.12.1",
    "@aws-lambda-powertools/metrics": "^1.12.1",
    "@aws-lambda-powertools/parameters": "^1.12.1",
    "@aws-lambda-powertools/tracer": "^1.12.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@mrgrain/cdk-esbuild": "^5.0.3",
    "@types/aws-lambda": "^8.10.122",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^0.34.5",
    "aws-cdk": "2.103.1",
    "aws-cdk-lib": "2.103.1",
    "aws-event-mocks": "^0.0.0",
    "aws-sdk-client-mock": "^3.0.0",
    "constructs": "^10.0.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.34.6"
  }
}